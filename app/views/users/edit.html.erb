<div>
  <ul class="breadcrumb">
    <li>
      <a href="/">Home</a><span class="divider">/</span>
    </li>
    <li>
      <a href="<%= users_path %>">用户表</a><span class="divider">/</span>
    </li>
    <li>
      新增用户
    </li>
  </ul>
</div>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title>
      <h2><i class="icon-edit"></i>填写用户信息</h2>
      <div class="box-icon">
        <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
        <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
        <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="box-content center" style="width: 400px;padding-top: 30px;padding-bottom: 50px">
      <%= form_for(@user) do |f| %>
          <table style="font-size: 18px">
            <tr>
              <td colspan="2" style="padding-bottom: 20px"><%= image_tag(@user.picture, size:'150x150') %></td>
            </tr>
            <tr>
              <td style="text-align: left"><h3>姓名：</h3></td>
              <td><%= f.text_field :name, placeholder:'真实姓名' %></td>
            </tr>
            <tr>
              <td style="text-align: left"><h3>电话：</h3></td>
              <td><%= f.text_field :phone, placeholder:'联系电话' %></td>
            </tr>
            <tr>
              <td style="text-align: left"><h3>头像链接：</h3></td>
              <td><%= f.text_field :picture, placeholder:'头像的链接地址' %></td>
            </tr>
            <tr>
              <td style="text-align: left"><h3>帐号：</h3></td>
              <td><%= f.text_field :account, :readonly=>true %></td>
            </tr>
            <tr>
              <td style="text-align: left"><h3>角色：</h3></td>
              <td><%= f.text_field :role, :readonly=>true %></td>
            </tr>
            <tr>
              <td style="text-align: left"><h3>注册时间：</h3></td>
              <td><%= f.text_field :sign_time, :readonly=>true %></td>
            </tr>
            <tr>
              <td style="text-align: left"><h3>登录时间：</h3></td>
              <td><%= f.text_field :lately_login, :readonly=>true %></td>
            </tr>
            <tr>
              <td colspan="2" class="login-box"><%= f.submit '提交',class: 'btn btn-success' %></td>
            </tr>
          </table>
      <% end %>
    </div>
  </div>
</div>
