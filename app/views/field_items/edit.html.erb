<div>
  <ul class="breadcrumb">
    <li>
      <a href="/">Home</a><span class="divider">/</span>
    </li>
    <li>
      <a href="<%= identity_tables_path %>">自定义表单</a><span class="divider">/</span>
    </li>
    <li>
      <a href="<%= table_fields_path %>"><%= @table.table_name %></a><span class="divider">/</span>
    </li>
    <li>
      <a href="<%= field_items_path %>"><%= @field.field_name %></a><span class="divider">/</span>
    </li>
    <li>
      编辑选项
    </li>
  </ul>
</div>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title>
      <h2><i class="icon-edit"></i>填写<%= @field.field_name %>选项信息</h2>

      <div class="box-icon">
        <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
        <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
        <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
      </div>
    </div>
    <div class="box-content center" style="width: 400px;padding-top: 30px;padding-bottom: 50px">
      <%= form_for(@field_item) do |f| %>
          <% if @field_item.errors.any? %>
              <div id="error_explanation" style="padding-left: 20%;padding-top: 20px">
                <ul>
                  <% @field_item.errors.full_messages.each do |msg| %>
                      <li style="color: #ff0000;font-size: 18px;text-align: left"><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
          <table style="font-size: 18px">
            <tr>
              <td style="text-align: left">选项序号：</td>
              <td><%= f.text_field :item_turn %></td>
            </tr>
            <tr>
              <td style="text-align: left">选项名称：</td>
              <td><%= f.text_field :item_name %></td>
            </tr>
            <tr>
              <td colspan="2" class="login-box"><%= f.submit '提交',class: " btn btn-success" %></td>
            </tr>
          </table>
      <% end %>
    </div>
  </div>
</div>
