<div class="container-fluid">
  <div class="row-fluid">
    <div class="row-fluid">
      <div class="span12 center login-header">
        <h2>小马过河数据监测系统</h2>
      </div><!--/span-->
    </div><!--/row-->
    <div class="row-fluid">
      <div class="well span5 center login-box">
        <% if flash[:notice] %>
            <div class="alert alert-info">
              <button type="button" class="close" data-dismiss="alert">×</button>
              <%= notice %>
            </div>
        <% end %>
        <% if flash[:alert] %>
            <div class="alert alert-block ">
              <button type="button" class="close" data-dismiss="alert">×</button>
              <%= alert %>
            </div>
        <% end %>
        <% if flash[:error] %>
            <div class="alert alert-error">
              <button type="button" class="close" data-dismiss="alert">×</button>
              <%= flash[:error] %>
            </div>
        <% end %>
        <% if flash[:success] %>
            <div class="alert alert-success">
              <button type="button" class="close" data-dismiss="alert">×</button>
              <%= flash[:success] %>
            </div>
        <% end %>
        <form action="user_session" method="post" accept-charset="utf-8">
          <div class="input-prepend" title="Username" data-rel="tooltip">
            <span class="add-on"><i class="icon-user"></i></span>
            <input type="text" class="input-large" name="account" placeholder="登录帐号">
          </div>
          <div class="clearfix"></div>

          <div class="input-prepend" title="Password" data-rel="tooltip">
            <span class="add-on"><i class="icon-lock"></i></span>
            <input type="password" class="input-large" name="password" placeholder="登录密码">
          </div>
          <div class="clearfix"></div>

          <div class="input-prepend">
            <label class="remember" for="remember">
              <input type="checkbox">记住帐号
              <input type="checkbox">记住密码
            </label>
          </div>
          <div class="clearfix"></div>

          <p class="center span5">
            <button type="submit" class="btn btn-primary">登录</button>
          </p>
          <div class="clearfix"></div>
          <a href="#">没有帐号？点击申请</a>
          </p>
        </form>
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div><!--/fluid-row-->
</div><!--/.fluid-container-->