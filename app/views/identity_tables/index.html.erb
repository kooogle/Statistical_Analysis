<div>
  <ul class="breadcrumb">
    <li>
      <a href="/">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="/">自定义表单</a> <span class="divider">/</span>
    </li>
  </ul>
</div>
<div>
  <!-- devise的提示信息 start -->
  <% if flash[:notice] %>
      <div class="alert alert-info">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <%= notice %>
      </div>
  <% end %>
  <% if flash[:alert] %>
      <div class="alert alert-block ">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <%= alert %>
      </div>
  <% end %>
  <% if flash[:error] %>
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <%= flash[:error] %>
      </div>
  <% end %>
  <% if flash[:success] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <%= flash[:success] %>
      </div>
  <% end %>
  <!-- devise的提示信息 end -->

<div class="row-fluid sortable">

  <div class="box span12">

    <div class="box-header well" data-original-title>
      <h2>自定义表单</h2>
      <div class="box-icon">
        <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
        <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
        <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
      </div>
    </div>

    <div class="box-content">
      <p class="left">
        <%= link_to(new_identity_table_path, class: "btn btn-large btn-primary") do %>
            <i class="icon-white icon-plus-sign"></i>
            添加表单
        <% end %>
      </p>
      <table class="table table-bordered table-striped table-condensed">
        <thead>
        <tr>
          <th style="font-size: 20px">编号</th>
          <th style="font-size: 20px">表名</th>
          <th style="font-size: 20px">操作</th>
        </tr>
        </thead>
        <% @identity_tables.each do |item| %>
            <tr>
              <td style="font-size: 20px"><%= item.id %></td>
              <td style="font-size: 20px;color: #0099FF"><%= item.table_name %></td>
              <td class="center" style="width: 300px;text-align: center">
                <%= link_to(table_field_identity_tables_path(id:item.id), class:'btn btn-primary') do %>
                    <i class="icon-headphones icon-white"></i>
                    字段
                <% end %>
                <%= link_to(identity_table_table_forms_path(item), class:'btn btn-primary') do %>
                    <i class="icon-pencil icon-white"></i>
                    数据
                <% end %>
                <%= link_to(edit_identity_table_path(item), class:'btn btn-info') do %>
                    <i class="icon-edit icon-white"></i>
                    编辑
                <% end %>
                <%= link_to(item, :method => :delete, :confirm => "你确定要删除该表所有数据么?", class:'btn btn-danger') do %>
                    <i class="icon-trash icon-white"></i>
                    删除
                <% end %>
              </td>
            </tr>
        <% end %>
      </table>
    </div>
  </div><!--/span-->
</div><!--/row-->
</div>